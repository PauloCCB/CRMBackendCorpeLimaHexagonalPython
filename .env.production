# ============================================
# ENTORNO DE PRODUCCIÓN
# ============================================
ENVIRONMENT=production

# Aplicación
APP_NAME=CRM Backend - Production
DEBUG=False
VERSION=1.0.0

# Base de datos de producción (MySQL Railway/Cloud)
# ⚠️ IMPORTANTE: Reemplazar con tus credenciales reales
DATABASE_URL=mysql+pymysql://usuario:password@host.railway.app:3306/railway
ASYNC_DATABASE_URL=mysql+aiomysql://usuario:password@host.railway.app:3306/railway

# CORS - Especificar dominios permitidos en producción
# Ejemplo: CORS_ORIGINS=https://miapp.com,https://admin.miapp.com
CORS_ORIGINS=https://tudominio.com

# Eventos - Más workers para producción
EVENTO_FINANCIERO_MAX_WORKERS=20
EVENTO_FINANCIERO_TIMEOUT=300
